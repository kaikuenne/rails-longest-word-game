<h1 style="text-align: center;">The longest word game.</h1>

  <br>
  <br>

<div class="wrapper">

  <div class="container">
    <% @letters.each do |letter| %>
      <p class="letters"><%= letter %></p>
    <% end %>
  </div>

  <br>
  <br>
  <br>
  <br>

  <div class="container">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <input type="text" name="user_word" placeholder="Your word here.">
      <input type="submit">
    </form>
  </div>

</div>
